algoritmo "Exercicio6"
var
   N1, AN, SC:Inteiro

inicio
      Escreva ("Por favor informe um numero aleatorio: ")
      Leia (N1)
      Escreval (" ")
      
      AN <- N1 - 1
      SC <- N1 + 1
      
      Escreva ("O Antecessor de", N1, " é igual a", AN)
      Escreval (" ")
      
      Escreva ("O Sucessor de", N1, " é igual a", SC)
      Escreval (" ")

fimalgoritmo